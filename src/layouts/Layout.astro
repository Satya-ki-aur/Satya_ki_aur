---
import '@/styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-sky-50 text-slate-700">
		<header class="bg-[#89CFF0] text-slate-800 p-4 shadow-md">
			<nav class="container mx-auto flex justify-between items-center">
				<div class="flex items-center space-x-3">
					<img src="/Channel Logo.jpg" alt="Satya ki aur Logo" class="h-10 w-10 rounded-full" />
					<div class="text-xl font-bold">Satya ki aur</div>
				</div>
				<div class="flex items-center space-x-4">
					<a href="/who-we-are" class="hover:text-black">WHO WE ARE</a>
					<a href="/teachings" class="hover:text-black">THE TEACHINGS</a>
					<a href="/signup" class="hover:text-black">SIGNUP</a>
					<a href="/audio" class="hover:text-black">AUDIO ON / OFF</a>
					{/* Language toggle buttons removed for now */}
				</div>
			</nav>
		</header>
		<slot />
	</body>
</html>

<script>
  const LANG_STORAGE_KEY = 'selectedLanguage';
  let currentLanguage = localStorage.getItem(LANG_STORAGE_KEY) || 'en'; // Default to English

  const enButton = document.getElementById('lang-en');
  const hiButton = document.getElementById('lang-hi');

  function setLanguage(lang: string) {
    currentLanguage = lang;
    localStorage.setItem(LANG_STORAGE_KEY, lang);
    console.log(`Language set to: ${lang}`);
    document.documentElement.lang = lang; 
    if (lang === 'hi') {
      document.body.classList.add('lang-hi');
      document.body.classList.remove('lang-en');
      hiButton?.classList.add('bg-gray-700');
      enButton?.classList.remove('bg-gray-700');
    } else {
      document.body.classList.add('lang-en');
      document.body.classList.remove('lang-hi');
      enButton?.classList.add('bg-gray-700');
      hiButton?.classList.remove('bg-gray-700');
    }
  }

  enButton?.addEventListener('click', () => setLanguage('en'));
  hiButton?.addEventListener('click', () => setLanguage('hi'));

  // setLanguage(currentLanguage); // Temporarily disable language script initial call
</script>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
  /* Any other global styles specific to this layout can go here */
</style>

